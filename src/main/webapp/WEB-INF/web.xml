    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ServletDeletingPaymentCard</servlet-name>
        <url-pattern>/delete_payment_card</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ServletDeletingPayment</servlet-name>
        <url-pattern>/delete_payment</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>ResponseConfigurationFilter</filter-name>
        <filter-class>by.itacademy.zuevvlad.cardpaymentproject.servlet.filter.ResponseConfigurationFilter</filter-class>
    </filter>

    <filter>
        <filter-name>LoggedOnUserExistingFilter</filter-name>
        <filter-class>by.itacademy.zuevvlad.cardpaymentproject.servlet.logon.filter.LoggedOnUserExistingFilter</filter-class>
    </filter>

    <filter>
        <filter-name>LoggedOnCorrectPasswordOfUserFilter</filter-name>
        <filter-class>by.itacademy.zuevvlad.cardpaymentproject.servlet.logon.filter.LoggedOnCorrectPasswordOfUserFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>ResponseConfigurationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
      <filter-name>LoggedOnUserExistingFilter</filter-name>
      <servlet-name>LogOnServlet</servlet-name>
    </filter-mapping>

    <filter-mapping>
        <filter-name>LoggedOnCorrectPasswordOfUserFilter</filter-name>
        <servlet-name>LogOnServlet</servlet-name>
    </filter-mapping>

</web-app>
